{
  "$schema": "https://schemastore.org/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "rootDir": "./",
    "outDir": "./dist",
    "target": "es2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./node_modules", "./tests/**/*.ts"]
}
