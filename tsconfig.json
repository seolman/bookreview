{
  "$schema": "https://schemastore.org/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "rootDirs": ["./src", "./tests"],
    "outDir": "./dist",
    "target": "es2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts", "./tests/**/*.ts"]
}
